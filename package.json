{
  "name": "ndhu-resources-node",
  "private": true,
  "sideEffects": false,
  "version": "0.0.3-preview",
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "HOST=127.0.0.1 PORT=40234 remix-serve ./build/server/index.js",
    "start:noenv": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "migrations:gen": "drizzle-kit generate",
    "migrations:gen-empty": "drizzle-kit generate --custom",
    "migrations:up": "drizzle-kit up",
    "migrations:apply": "tsx ./app/db/migrate.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@remix-run/node": "^2.12.1",
    "@remix-run/react": "^2.12.1",
    "@remix-run/serve": "^2.12.1",
    "bull": "^4.16.3",
    "daisyui": "^4.12.10",
    "drizzle-orm": "^0.33.0",
    "file-type": "^19.5.0",
    "firebase": "^10.13.2",
    "firebase-admin": "^12.5.0",
    "isbot": "^4.1.0",
    "mysql2": "^3.11.3",
    "nodemailer": "^6.9.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "redis": "^4.7.0",
    "tiny-invariant": "^1.3.3",
    "uuid": "^10.0.0"
