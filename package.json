    "bull": "4.16.5",
    "daisyui": "5.1.12",
    "drizzle-orm": "0.44.5",
    "file-type": "21.0.0",
    "firebase": "12.2.1",
    "firebase-admin": "13.5.0",
    "isbot": "5.1.30",
    "mysql2": "3.15.0",
    "nodemailer": "7.0.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "5.5.0",
    "redis": "5.8.2",
